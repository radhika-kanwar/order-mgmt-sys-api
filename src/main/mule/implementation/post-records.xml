<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:db="http://www.mulesoft.org/schema/mule/db"
	xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd 
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">
	<sub-flow name="post-records-sub-flow" doc:id="3eb47678-f541-4a3b-8d9c-03009b325887" >
		<logger level="INFO" doc:name="START" doc:id="ea4ed0f4-90ce-49d8-8c6b-7976912f7fad" message="#[%dw 2.0 &#10;output application/json&#10;---&#10;{&#10;	&quot;flowName&quot;: flow.name,&#10;	&quot;table&quot;: attributes.headers.'table-name',&#10;	&quot;timeStamp&quot;: now(),&#10;	&quot;correlationId&quot;: vars.correlationId,&#10;	&quot;message&quot;: &quot;The flow has started.&quot;&#10;}]"/>
		<ee:transform doc:name="var: query" doc:id="187f9450-a1b4-4412-a84c-c8fd11c8e4be">
			<ee:message>
				<ee:set-payload><![CDATA[payload]]></ee:set-payload>
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="query" ><![CDATA[%dw 2.0
output application/json

var table  = attributes.headers.'table-name' default ""
var keys   = keysOf(payload[0])
var columns = keys joinBy ", "             
var namedParams  = keys map (":" ++ $) joinBy ", "
---

{
	sql: "INSERT INTO " ++ table ++ " (" ++ columns ++ ") VALUES (" ++ namedParams ++ ")",
}

]]></ee:set-variable>
			</ee:variables>
		
</ee:transform>
		<foreach doc:name="For Each Record" doc:id="f6cfb91b-0940-4ebf-896c-24efc378fa7a" collection="#[payload]">
			<db:insert doc:name="Records" doc:id="865a763d-2134-4e88-aeea-c21ea0bb609f" config-ref="oms-sys-api-database-config" autoGenerateKeys="true" target="dbOutput" autoGeneratedKeysColumnNames="#[[attributes.headers.'primary-key']]">
			<db:sql><![CDATA[#[vars.query.sql]
]]></db:sql>
			<db:input-parameters><![CDATA[#[payload]]]></db:input-parameters>
			<db:auto-generated-keys-column-indexes />
		</db:insert>
		</foreach>
		<ee:transform doc:name="Preparing Response" doc:id="9f83f00c-fe23-4bc0-bb22-0cc9800f6bf5" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
  "message": "Record inserted successfully!",
  (attributes.headers.'primary-key'): vars.dbOutput.generatedKeys[0]
}
]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="END" doc:id="a7f225bb-6115-439e-9be0-eb84f858b251" message="#[%dw 2.0 &#10;output application/json&#10;---&#10;{&#10;	&quot;flowName&quot;: flow.name,&#10;	&quot;table&quot;: attributes.headers.'table-name',&#10;	&quot;timeStamp&quot;: now(),&#10;	&quot;correlationId&quot;: vars.correlationId,&#10;	&quot;message&quot;: &quot;The flow has ended.&quot;&#10;}]"/>
	</sub-flow>
	
</mule>
